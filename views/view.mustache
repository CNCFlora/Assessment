{{> header}}

{{#assessment}}
<div class="span8">
    {{> assessment}}
</div>

<div class="span4">
    <h4>{{strings.metadata}}</h4>
    {{#metadata}}
    {{> metadata}}
    {{/metadata}}
    <h4>{{strings.last-review}}</h4>
    {{#review}}
    <p><strong>({{evaluator}}) {{review.status}}</strong>: {{review.comment}}</p>
    {{/review}}
    {{^review}}
    <p>{{strings.no-review}}</p>
    {{/review}}
    <h4>{{strings.comments}}</h4>
    {{#comments}}
    <p><strong>{{creator}}</strong>: {{comment}}</p>
    {{/comments}}
    {{^comments}}
    <p>{{strings.no-comments}}</p>
    {{/comments}}
    {{#logged}}
        {{#role-assessor}}
            {{#status-open}}
                <a href="{{base}}/assessment/{{_id}}/edit" class="btn btn-mini">{{strings.edit}}</a>
            {{/status-open}}
        {{/role-assessor}}
        {{#role-evaluator}}
            {{#status-review}}
                <a href="{{base}}/assessment/{{_id}}/review" class="btn btn-mini">{{strings.review}}</a>
            {{/status-review}}
        {{/role-evaluator}}
        {{#status-comments}}
            <a href="{{base}}/assessment/{{_id}}/comment" class="btn btn-mini">{{strings.comment}}</a>
        {{/status-comments}}

        {{#role-admin}}
        <form action="{{base}}/assessment/{{_id}}/change" method='POST'>
              <fieldset>
                  <legend>{{strings.change-status}}</legend>
                  <select name="status">
                      <option>open</option>
                      <option>review</option>
                      <option>comments</option>
                      <option>published</option>
                 </select>
                  <button class="btn btn-primary">{{strings.send}}</button>
              </fieldset>
          </form>
        {{/role-admin}}

    {{/logged}}
</div>
{{/assessment}}

{{> footer}}

