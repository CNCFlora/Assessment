{{> header}}

<form action="{{base}}/" class='span12'>
    <div class="input-append input-prepend">
        <input class="span4" type="text" name="query"
                placeholder="Search..." value="{{query}}">
        <button class="btn" type="search">{{strings.search}}</button>
    </div>
</form>

<div class="span12">
    {{^result}}
        <p>{{strings.no-result}}</p>
    {{/result}}
    <ul>
        {{#result}}
        <li><a href="{{base}}/assessment/{{_id}}"><i>{{taxon.scientificName}}</i> {{taxon.scientificNameAuthorship}}</a></li>
        {{/result}}
    </ul>
</div>

{{> footer}}
