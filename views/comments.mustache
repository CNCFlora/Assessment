{{> header}}

{{#assessment}}
<div class="span8">
    {{> assessment}}
    <form action="/assessment/{{_id}}/comment" method="POST" id='comment-form'>
        <fieldset>
            <legend>{{strings.add-comment}}</legend>
            <p><textarea id="comment" name="comment" rows="10" cols="30"></textarea></p>
            <p><button type='submit' class='btn btn-success'>{{strings.comment}}</button></p>
        </fieldset>
    </form>
</div>

<div class="span4">
    <h4>{{strings.metadata}}</h4>
    {{#metadata}}
    {{> metadata}}
    {{/metadata}}
    {{#role-assessor}}
    <form action="/assessment/{{_id}}/send/open" method="POST" class='send-to'>
        <button class="btn btn-success">{{strings.send-to-open}}</button>
    </form>
    <form action="/assessment/{{_id}}/send/published" method="POST" class='send-to'>
        <button class="btn btn-success">{{strings.send-to-published}}</button>
    </form>
    {{/role-assessor}}
</div>
{{/assessment}}

{{> footer}}

